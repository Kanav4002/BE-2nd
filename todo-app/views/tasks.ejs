<!DOCTYPE html>
<html lang="en">
<head>
    <title>Todo List</title>
    <style>
      body {
          font-family: Arial, sans-serif;
          background-color: #000000;
          text-align: center;
          margin: 0;
          padding: 20px;
      }

      h1 {
          color: #ffffff;
      }

      form {
          margin-bottom: 20px;
      }

      input[type="text"] {
          padding: 8px;
          width: 60%;
          border: 2px solid #ccc;
          border-radius: 5px;
          font-size: 16px;
      }

      button {
          padding: 8px 15px;
          font-size: 16px;
          color: white;
          background-color: #28a745;
          border: none;
          border-radius: 5px;
          cursor: pointer;
      }

      button:hover {
          background-color: #218838;
      }

      ul {
          list-style: none;
          padding: 0;
          width: 65%;
          margin: 0 auto;
      }

      li {
          background: white;
          padding: 10px;
          margin: 5px 0;
          border-radius: 5px;
          box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
      }

      li a {
          text-decoration: none;
          color: #007bff;
          font-weight: bold;
      }

      li a:hover {
          text-decoration: underline;
      }
    </style>
</head>
<body>
    <h1>TODO LIST</h1>
    <form action="/add-task" method="POST">
        <input type="text" name="text" placeholder="New Task" required>
        <button type="submit">Add</button>
    </form>
    <ul>
        <% tasks.forEach(task => { %>
            <li>
                <a href="/task?id=<%= task.id %>"><%= task.text %></a>
            </li>
        <% }); %>
    </ul>
</body>
</html>
